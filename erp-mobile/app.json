{
  "expo": {
    "name": "Qorpy ERP",
    "slug": "qorpy-erp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "qorpy",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4B6BF5"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.qorpy.erp",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Qorpy ERP needs camera access to scan documents and receipts.",
        "NSPhotoLibraryUsageDescription": "Qorpy ERP needs photo library access to upload documents.",
        "NSFaceIDUsageDescription": "Qorpy ERP uses Face ID for secure authentication."
      }
    },
    "android": {
      "package": "com.qorpy.erp",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4B6BF5"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-font",
        {
          "fonts": []
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
